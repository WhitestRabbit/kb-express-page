extends layout

block content
    .d-flex.justify-content-center
        .card.flex-fill
            .card-body
                .card-title
                    h1.display-4 #{title}
                .card.text
                    form(method='POST', action='/articles/add')
                        .form-group
                            label Title
                            input.form-control(name='title', type='text')
                        .form-group
                            label Body
                            textarea.form-control(name='body')
                        input.btn.btn-primary(type='submit', value='Add new Article')